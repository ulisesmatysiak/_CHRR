<div class="text-center mb-4">
    <img src="~/img/LOGO1.png" alt="Logo" class="img-fluid" style="max-width: 200px;" />
</div>
<form method="post" asp-action="Login" class="needs-validation" novalidate>
    <div class="form-group mb-3">
        <input type="text" class="form-control custom-input" id="usernameOrEmail" name="usernameOrEmail" placeholder="USERNAME OR EMAIL" required>
        <div class="invalid-feedback">
            INVALID USERNAME OR EMAIL
        </div>
    </div>

    <div class="form-group mb-3">
        <input type="password" class="form-control custom-input" id="password" name="password" placeholder="PASSWORD" required>
        <div class="invalid-feedback">
            INVALID PASSWORD
        </div>
    </div>

    <div class="mb-3 text-center">
        <button type="submit" class="btn btn-outline-primary btn-block">LOG IN</button>
    </div>
</form>
